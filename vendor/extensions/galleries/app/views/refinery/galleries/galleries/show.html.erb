<% content_for :body_content_title do %>
  <%= @gallery.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @gallery.name %>
    </p>
  </section>
  <section>
    <h1>Date</h1>
    <p>
      <%=raw @gallery.date %>
    </p>
  </section>
  <section>
    <h1>Location</h1>
    <p>
      <%=raw @gallery.location %>
    </p>
  </section>
  <section>
    <h1>Youtube</h1>
    <p>
      <%=raw @gallery.youtube %>
    </p>
  </section>
  <section>
    <h1>Video</h1>
    <p>
      <%=raw @gallery.video %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @gallery.description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="galleries">
      <% @galleries.each do |gallery| %>
        <li>
          <%= link_to gallery.name, refinery.galleries_gallery_path(gallery) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
